# Environment Configuration Template for Frontend
# Copy this file to .env and update with your actual values

# ===========================================
# API Configuration
# ===========================================
VITE_API_URL=http://localhost:3002
VITE_API_TIMEOUT=10000

# ===========================================
# Application Configuration
# ===========================================
VITE_APP_TITLE=Gestión de Actividad Laboral
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sistema de gestión y seguimiento de actividades laborales

# ===========================================
# Features Toggle
# ===========================================
# Enable/disable features for different environments
VITE_ENABLE_GPS_FEATURES=false
VITE_ENABLE_MONITORING_DASHBOARD=true
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_METRICS_PAGE=true

# ===========================================
# Development Options
# ===========================================
# Only for development
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
VITE_SHOW_DEV_TOOLS=false

# ===========================================
# UI Configuration
# ===========================================
VITE_DEFAULT_THEME=light
VITE_COMPANY_NAME=Tu Empresa
VITE_SUPPORT_EMAIL=soporte@tuempresa.com

# ===========================================
# Pagination and Limits
# ===========================================
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# ===========================================
# Cache Configuration
# ===========================================
VITE_CACHE_DURATION=300000
VITE_ENABLE_OFFLINE_MODE=false