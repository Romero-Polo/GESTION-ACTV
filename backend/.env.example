AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id
AZURE_AD_REDIRECT_URI=http://localhost:3000/auth/callback

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=24h

# ===========================================
# Session Configuration
# ===========================================
SESSION_SECRET=your-super-secure-session-secret-key-at-least-32-characters
SESSION_MAX_AGE=3600000

# ===========================================
# Redis Configuration (Optional - Recommended for Production)
# ===========================================
# Redis is optional but recommended for production caching and sessions
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# API Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Export rate limiting (more restrictive)
EXPORT_RATE_LIMIT_WINDOW_MS=300000
EXPORT_RATE_LIMIT_MAX_REQUESTS=10

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=logs

# n8n Integration
N8N_API_URL=http://localhost:5678/webhook
N8N_API_KEY=your_n8n_api_key
N8N_WEBHOOK_SECRET=your_n8n_webhook_secret
N8N_OBRAS_ENDPOINT=/api/n8n/obras
N8N_RECURSOS_ENDPOINT=/api/n8n/recursos
N8N_TIMEOUT=30000
N8N_RETRY_ATTEMPTS=3
N8N_RETRY_DELAY=1000

# Synchronization Settings
SYNC_ENABLED=true
SYNC_OBRAS_ENABLED=true
SYNC_RECURSOS_ENABLED=true
SYNC_OBRAS_CRON=0 6 * * *
SYNC_RECURSOS_CRON=0 6 * * *
SYNC_LOG_RETENTION_DAYS=30

# ===========================================
# Frontend Configuration
# ===========================================
FRONTEND_URL=http://localhost:5173

# ===========================================
# Monitoring and Health Checks
# ===========================================
HEALTH_CHECK_TIMEOUT=5000
METRICS_ENABLED=true

# ===========================================
# Development/Debug Options
# ===========================================
# Only use in development
DEBUG=false
ENABLE_CORS_DEBUG=false