# Test Environment Configuration
NODE_ENV=test

# Database Configuration for Testing
DB_HOST=localhost
DB_PORT=1433
DB_USERNAME=sa
DB_PASSWORD=YourPassword123!
DB_NAME=gestion_actividad_test
DB_SYNCHRONIZE=true
DB_LOGGING=false

# Redis Configuration (Optional for tests)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=test-secret-key-for-jwt-tokens
JWT_EXPIRES_IN=24h

# Session Configuration
SESSION_SECRET=test-session-secret

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Azure AD (Not used in tests, but required by config)
AZURE_AD_CLIENT_ID=test-client-id
AZURE_AD_CLIENT_SECRET=test-client-secret
AZURE_AD_TENANT_ID=test-tenant-id

# Logging
LOG_LEVEL=error

# API Rate Limiting (Lower for testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000