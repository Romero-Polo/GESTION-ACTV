{
  "name": "gestion-actividad-backend",
  "version": "1.0.0",
  "description": "Backend API para gestiÃ³n de actividad laboral",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npx tsx watch src/index.ts",
    "dev:old": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "NODE_ENV=test jest --testMatch='**/e2e/*.test.ts' --runInBand",
    "test:unit": "NODE_ENV=test jest --testMatch='**/*.spec.ts' --runInBand",
    "migration:run": "ts-node src/scripts/run-migrations.ts",
    "migration:revert": "ts-node -e \"import('typeorm').then(t => t.createConnection().then(c => c.undoLastMigration().then(() => c.close())))\",",
    "db:seed": "ts-node -e \"import('./src/seeders/InitialDataSeeder').then(s => import('./src/utils/database').then(d => d.AppDataSource.initialize().then(() => s.InitialDataSeeder.run().then(() => d.AppDataSource.destroy()))))\"",
    "db:reset": "npm run migration:revert && npm run migration:run && npm run db:seed"
  },
  "dependencies": {
    "@azure/msal-node": "^1.18.4",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^9.1.1",
    "node-cron": "^3.0.3",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.1.14",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.17",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
